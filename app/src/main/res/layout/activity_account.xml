<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#0C0B0A"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="238dp"
        android:layout_height="46dp"
        android:orientation="vertical">
        <EditText
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:hint="Who's Watching?"
            android:background="@android:color/transparent"
            android:textColorHint="@color/white"
            android:textSize="18dp"
            android:text=""
            android:inputType="text"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/ibAcc1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/akun_1"/>
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/ibAcc2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/akun_2"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/ibAcc3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/akun_3"/>
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/ibAcc4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/akun_4"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ibAcc5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/akun_5"/>
    </LinearLayout>
</LinearLayout>